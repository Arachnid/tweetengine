<metal:master use-macro="master" i18n:domain="tweetengine">

  <metal:title fill-slot="title" i18n:translate="added-account">Account added</metal:title>

  <metal:body fill-slot="body">
	  <h2 i18n:translate="added-account">Account added</h2>
	  
	  <p i18n:translate="added-message">You successfully added the account 
	  "<span i18n:name="accountname">"${account.name}</span> 
	  (<span i18n:name="username">${account.username}</span>)"
	  to TweetEngine.</p>
	  
	  <p i18n:translate="added-back">Go back to 
	   <a href="/${account.username}/" i18n:translate="added-backlink" i18n:name="backlink">your account</a>
	  </p>
  </metal:body>
  
</metal:master>