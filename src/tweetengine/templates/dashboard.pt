<metal:master use-macro="master">

  <metal:title fill-slot="title">${current_account.username} &ndash; Account Info</metal:title>

  <metal:head fill-slot="head">
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.0/jquery.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/static/tweetengine.js"></script>
  </metal:head>
  
  <metal:sidebar fill-slot="sidebar">
    <metal:use metal:use-macro="macros['sidebar-accounts']"  />
  </metal:sidebar>
  
  <metal:body fill-slot="body">
  

  <div class="post">  

    <div id="tweetbox">
      <p id="tweetlabel">140</p>
      <h2>What's happening with ${current_account.username}?</h2>
      <form action="/${current_account.username}/tweet" method="post">
       <div> 
         <textarea id="tweetarea" name="tweet" ></textarea>
         <input id="tweetsubmit" type="submit" value="Submit" disabled="disabled" />
       </div>
      </form>
    </div>

  </div>

  <div class="post"
       tal:condition="tweets">

    <h2>Pending tweets</h2>

    <form method="POST" action="/${current_account.username}/">
      <table class="display" id="pending-tweets">
        <tr><th>Send</th><th>Delete</th><th>No change</th><th>Tweet message</th><th>Postpone until</th></tr>
        
            <tr tal:repeat="tweet tweets">
              <td class="field"><input type="radio" name="tweet.${tweet.key().id()}" value="send" /></td>
              <td class="field"><input type="radio" name="tweet.${tweet.key().id()}" value="delete" /></td>
              <td class="field"><input type="radio" name="tweet.${tweet.key().id()}" value="leave" /></td>
              <td tal:content="structure tweet.message">MESSAGE</td>
              <td><input type="text" name="timestamp.${tweet.key().id()}" value="${tweet.timestamp}" class="timestamp" />TIMESTAMP</td>
            </tr>

      </table>
      <input type="submit" value="Submit" />
    </form>

  </div>


  <div class="post">  

    <h2>Timeline</h2>    

	<ol id="tweet-template" class="tweetlist">
	    <li>
	        <div class="tweet-thumb"> <a href="USERURL"><img
	          width="48" height="48" src="" alt="IMAGEALT" /></a>
	        </div> 
	        <span class="tweet-user">
	            <a title="TITLE" href="TWEETURL">TWEETUSERNAME</a>
	        </span>
	        <span class="tweet-content">TWEETCONTENT</span> 
	        <div class="tweet-meta">

                <a class="tweet-dateurl" href="#" rel="bookmark">DATE</a>

	            from 
	            <span class="tweet-source">SOURCE</span>
	        </div>
	    </li>
	</ol>
                
    <div id="timeline">
      <ul>
        <li><a href="#tabs-mytweets">${current_account.username}</a></li>
        <li><a href="#tabs-friends">friends</a></li>
        <li><a href="#tabs-mentions">mentions</a></li>
        <li><a href="#tabs-direct">direct messages</a></li>
      </ul>
      <div id="tabs-mytweets">
        <span class="loading-timeline">Loading ${current_account.username} tweets...</span>
      </div>
      <div id="tabs-friends">
        <span class="loading-timeline">Loading friends tweets...</span>
      </div>
      <div id="tabs-mentions">
        <span class="loading-timeline">Loading mentions...</span>
      </div>
      <div id="tabs-direct">
        <span class="loading-timeline">Loading direct messages...</span>
      </div>
    
    </div>
  </div>  

  
  </metal:body>
</metal:master>
  
